<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor"
    tools:context="com.myproject.sachinpatel.jobsearch.PortalPage">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">
        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id="@+id/indeed"
                android:src="@drawable/indeed_logo"></ImageButton>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id="@+id/monster"
                android:src="@drawable/monster_logo"></ImageButton>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id="@+id/workopolis"
                android:src="@drawable/workopolis_logo"></ImageButton>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_margin="10dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:id="@+id/ziprecruiter"
                android:src="@drawable/ziprecruiter_logo"></ImageButton>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
